<!--Used shared nav bar partial-->
<%= render "nav_bar" %>

<!--SEARCH BAR-->
<div class="m-4">
 <form class="d-flex ">
        <input class="form-control me-2" type="search" name="searchHospitals" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
 </form>
</div>

<!--TABLE-->
<div class="m-4">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">Hospital ID</th>
      <th scope="col">Hospital Name</th>
    </tr>
  </thead>

<tbody>
  <!--loop through each item in hospital array-->
  <% @hospitals_array.each_with_index do |hosp_element, index| %>
    <tr>
      <th scope="row">  <%= hosp_element.first %> </th>
      <td> <%= hosp_element.last %> </td>
  
    </tr>
  <% end %>
  </tbody>
</table>
  
</div>

<%= render "footer" %>